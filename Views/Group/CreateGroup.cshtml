@model Community3.Models.GroupCreationModel

<div style="background-color: white; border-radius: 4px; border: thin solid #dddddd">
    <div class="container-fluid" style="padding-top: 2%">
        <div class="row" style="margin-left: auto; margin-right:auto">
            <div class="col-md-12">
                @using (Html.BeginForm("CreateGroup", "Group"))
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary()
                    <div>
                        <div>
                            @Html.LabelFor(g => g.Name)
                        </div>
                        <div>
                            <input name="name" type="text" class="form-control">
                        </div>
                    </div>
                    <div>
                        <div>
                            @Html.LabelFor(g => g.Description)
                        </div>
                        <div>
                            <textarea name="description" class="form-control" rows="3" style="resize:none"></textarea>
                        </div>
                    </div>
                    <br />
                    <div>
                        <input type="submit" value="Создать группу" class="btn btn-default"/>
                    </div>
                    <br />
                }
            </div>
        </div>
    </div>
</div>