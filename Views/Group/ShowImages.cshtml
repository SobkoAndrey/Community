@model Community3.Models.Group

@{
    ViewBag.Title = "ShowImages";
}

<div style="background-color: white; border-radius: 4px; border: thin solid #dddddd">
    <div class="container-fluid" style="padding-top: 2%">
        <div class="row" style="margin-left: auto; margin-right:auto">
            <div class="col-md-12" style="text-align:center">
                <h3>Фотографии группы @Model.Name</h3>
                @foreach (var image in Model.Images)
                {
                    <label>@image.Label</label>
                    <img src="@Url.Content(image.Path)" alt="Фотография сообщества" title="@image.Label" style="max-width: 100%; height:auto; border-radius: 10%" /><br />
                    if (ViewBag.userId == Model.OwnerId)
                    {
                        @Html.ActionLink("Удалить", "RemoveImage", "Group", new { groupId = Model.GroupId, imageId = image.ImageId }, null);
                    }
                    <br />
                    <br />
                }
            </div>
        </div>
    </div>
</div>

