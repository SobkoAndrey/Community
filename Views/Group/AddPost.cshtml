@model Community3.Models.Post

@{
    ViewBag.Title = "AddPost";
}

<div style="background-color: white; border-radius: 4px; border: thin solid #dddddd">
    <div class="container-fluid" style="padding-top: 2%">
        <div class="row" style="margin-left: auto">
            <div class="col-md-12" style="text-align:center">
                @using (Html.BeginForm("AddPost", "Group"))
            {
                    <input type="hidden" name="groupId" value="@ViewBag.groupId" />
                    <div>
                        @Html.LabelFor(p => p.Name) <br />
                        @Html.EditorFor(p => p.Name)
                    </div>
                    <br />
                    <div>
                        @Html.LabelFor(p => p.Text) <br />
                        @Html.EditorFor(p => p.Text)
                    </div>
                    <br />
                    <div>
                        <input type="submit" value="Создать" name="submit" />
                    </div>
                    <br />
                }
            </div>
        </div>
    </div>
</div>