@model Community3.Models.Post

<div class="MainWindow">
    <div class="container-fluid" style="padding-top: 2%">
        <div class="row" style="margin-left: auto; margin-right:auto">
            <div class="col-md-12">
                @using (Html.BeginForm("AddNews", "Home"))
                {
                    @Html.ValidationSummary();
                    <div>
                        @Html.LabelFor(_ => _.Name) <br />
                        <input name="name" type="text" class="form-control">
                    </div>
                    <br />
                    <div>
                        @Html.LabelFor(_ => _.Text) <br />
                        <textarea name="text" class="form-control" rows="3" style="resize:none"></textarea>
                    </div>
                    <br />
                    <div>
                        <input type="submit" value="Создать" name="submit" class="btn btn-primary" />
                    </div>
                    <br />
                }
            </div>
        </div>
    </div>
</div>
