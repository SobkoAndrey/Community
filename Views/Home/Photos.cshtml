@model Community3.Models.AppUser


<div class="MainWindow">
    <div class="container-fluid" style="padding-top: 2%">
        <div class="row" style="margin-left: auto; margin-right:auto">
            <div class="col-md-12" style="text-align:center">
                <h3>@Model.FullName</h3>
                <div>
                    @Html.ActionLink("Загрузить фотографию", "AddImageToAlbum", new { }, new { @class = "btn btn-primary" })
                </div>
                @if (Model.Images.Count == 0)
                {
                    <h4>Вы не загрузили ни одной фотографии.</h4>
                }
                <br />
                @foreach (var image in Model.Images)
                {
                    <label>@image.Label</label>
                    <img src="@Url.Content(image.Path)" alt="Фотография" title="@image.Label" style="max-width: 100%; height:auto; border-radius: 10%" /><br />
                    @Html.ActionLink("Удалить", "RemoveImage", "Home", new { userId = Model.Id, imageId = image.ImageId }, null);
                    <br />
                    <br />
                }
            </div>
        </div>
    </div>
</div>