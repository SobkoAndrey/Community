@model Community3.Models.UserProfileEditModel

@{
    ViewBag.Title = "EditProfile";
}

<body>

    <div style="background-color: white; border-radius: 4px; border: thin solid #dddddd">
        <div class="container-fluid" style="padding-top: 2%">
            <div class="row" style="margin-left: auto">
                <div class="col-md-12" style="text-align:center">
                    @using (Html.BeginForm("EditProfile", "Home"))
                    {
                        @Html.ValidationSummary(false)
                        <div>
                            <label>Пол</label><br />
                            @Html.EditorFor(_ => _.Gender, "GenderTemplate")
                        </div>
                        <br />
                        <div>
                            <label>Город</label><br />
                            @Html.EditorFor(_ => _.Location)
                        </div>
                        <br />
                        <div>
                            <label>День рождения в формате дд.мм.гггг</label><br />
                            @Html.EditorFor(_ => _.Birthday)
                            @Html.ValidationMessageFor(_=>_.Birthday)
                        </div>
                        <br />
                        <div>
                            <label>О вас</label><br />
                            @Html.EditorFor(_ => _.Description)
                        </div>
                        <br />
                        <div>
                            <input type="submit" name="submit" />
                        </div>
                        <br />
                    }
                </div>
            </div>
        </div>
    </div>
</body>


