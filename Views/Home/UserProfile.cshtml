@model Community3.Models.AppUser

@{
    ViewBag.Title = "UserProfile";
}

<body>

    <div style="background-color: white; border-radius: 4px; border: thin solid #dddddd">
        <div class="container-fluid" style="padding-top: 2%">
            <div class="row" style="margin-left: auto">
                <div class="col-md-4">
                    @if (Model.Photo == null)
                    {
                        <img src="~/Images/no-avatar.png" alt="Аватар" title="Аватар" style="max-width: 100%; height:auto; border-radius: 10%" /><br />
                    }
                    else
                    {
                        <img src=@Model.Photo.Path alt="Аватар" title="Аватар" style="max-width: 100%; height:auto; border-radius: 10%" /><br />
                    }
                    <br />
                    <form action="@Url.Action("UploadPhoto")" method="post" enctype="multipart/form-data">
                        <div>Upload new photo</div>
                        <input type="file" name="photo" lang="en-us" /> <br />
                        <input type="submit" lang="en-us" />
                    </form>
                </div>
                <div class="col-md-8">
                    <div class="row">
                        <div class="col-md-12">
                            <span style="font-size:large">@Model.UserName</span>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            @{
                                if (Model.Gender != null)
                                {
                                    <span>Пол: @Model.Gender</span>
                                }
                                else
                                {
                                    <span>Пол: </span>
                                }
                            }
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            @{
                                if (Model.Location != null)
                                {
                                    <span>Город: @Model.Location</span>
                                }
                                else
                                {
                                    <span>Город: </span>
                                }
                            }
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            @{
                                if (Model.Birthday != null)
                                {
                                    <span>День рождения: @Model.Birthday</span>
                                }
                                else
                                {
                                    <span>День рождения: </span>
                                }
                            }
                        </div>
                    </div>
                    <br />
                    <div class="row">
                        <div class="col-md-12">
                            @Html.ActionLink("Change info", "EditProfile", "Users") <br />
                        </div>
                    </div>
                </div>
            </div>
        </div>
