@using Community3.Models
@model LoginViewModel
@{
    Layout = null;
}
<!DOCTYPE html>
<html>

<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    @Styles.Render("~/Content/css")
</head>

<body class="MainBack" style="text-align:center">
    <div class="MainWindow" style="margin-left:300px; margin-right:300px">
        @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post))
            {
            @Html.AntiForgeryToken()
            <h4>Используйте локальную учетную запись для входа.</h4>
            <hr />
            @Html.ValidationSummary()
            <div>
                <div>
                    @Html.LabelFor(m => m.Email)
                </div>
                <div>
                    @Html.EditorFor(m => m.Email)
                </div>
            </div>
            <div>
                <div>
                    @Html.LabelFor(m => m.Password)
                </div>
                <div>
                    @Html.PasswordFor(m => m.Password)
                </div>
            </div>
            <br />
            <div>
                @Html.EditorFor(m => m.RememberMe)
                @Html.LabelFor(m => m.RememberMe)
            </div>
            <br />
            <div>
                <input type="submit" value="Выполнить вход" />
            </div>
            <br />
            <p>
                @Html.ActionLink("Регистрация нового пользователя", "Register")
            </p>

        }

    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")

</body>
</html>